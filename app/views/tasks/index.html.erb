<h1>My Tasks</h1>
<% @tasks.each do |task| %>
<ul>
  <li><input class="form-check-input" type="checkbox" value="<%= task.completed %>" id="flexCheckDefault">
  <%= link_to task.title, task_path(task) %></li>

  <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</ul>

<% end %>
